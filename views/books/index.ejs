<h2 class="page-header">Search Books</h2>
<form action="/books" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" value='<%= searchOption.title%>'>
        </div>
    </div>
    <div class="form-row">
        <div class="form-item">
            <label for="publishAfter">Publish After</label>
            <input type="date" name="publishAfter" value="<%= searchOption.publishAfter%>">
        </div>
        <div class="form-item">
            <label for="publishBefore">Publish Before</label>
            <input type="date" name="publishBefore" value="<%= searchOption.publishBefore%>">
        </div>
    </div>
    <div class="form-row form-row-end">
        <input class="btn btn-primary" type="submit" value="Search">
    </div>
    
</form>
<br>
<div>
    <% books.forEach(book => {%>
    <a href="books/edit/<%= book.id%>">
        <img height="200" width="150" src="<%= book.coverImagePath%>" alt="abc">
    </a>
<% }) %>
</div>

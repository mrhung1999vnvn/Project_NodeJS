<h2>Search Author</h2>
<form action="/authors" method="GET">
    <label for="name">Name</label>
    <input type="text" id="Name" name="name" value='<%= searchOption.name%>'>
    <input type="submit" value="Search">
</form>
<br>
<% authors.forEach(author => {%>
    <div>
        <%= author.name%>
    </div>
    <a href="/authors/<%= author.id%>">View</a>
    <a href="/authors/edit/<%= author.id%>">Edit</a>
    <%- include('../partials/deleteForm.ejs',{url:`/authors/${author.id}`})%>
<% }) %>
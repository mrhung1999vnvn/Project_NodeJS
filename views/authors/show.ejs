<h2><%= author.name%></h2>
<div class="btn-row">
    <a class="btn btn-primary" href="/authors/edit/<%= author.id%>">Edit</a>
    <%- include('../partials/deleteForm.ejs',{
        url:`/authors/${author.id}`
    })%>
</div>

<% if(booksByAuthor.length > 0) {%>
    <h2>Books By Author</h2>
    <% booksByAuthor.forEach(book => {%>
        <img height="150" width="100" src="<%= book.coverImagePath%>" alt="abc">
    <% }) %>
<% } %>